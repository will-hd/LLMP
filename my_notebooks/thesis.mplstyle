# From: https://github.com/garrettj403/SciencePlots/blob/master/scienceplots/styles/journals/ieee.mplstyle
# Matplotlib style for IEEE plots
# This style should work for most two-column journals

# Set color cycle
# Set line style as well for black and white graphs
# axes.prop_cycle : (cycler('color', ['k', 'r', 'b', 'g']) + cycler('ls', ['-', '-', '-', '-']))
# /cycler('ls', ['-', '--', ':', '-.'])
axes.prop_cycle : cycler('color', ['0C5DA5', '00B945', 'FF9500', 'FF2C00', '845B97', '474747', '9e9e9e'])
#axes.prop_cycle : cycler('color', ['0C5DA5', '00B945', 'FF2C00', 'FF9500',  '845B97', '474747', '9e9e9e'])

# Set default figure size
figure.figsize : 4,3
figure.dpi : 300

# Font sizes
font.size : 10
#font.family : serif
#font.serif : Times

##### no_latex #####
text.usetex : False

# Set fonts to be LaTeX defaults
font.serif : cmr10, #Computer Modern Serif, DejaVu Serif
font.family : serif
axes.formatter.use_mathtext : True
mathtext.fontset : cm


##### science #####

# Always save as 'tight'
savefig.bbox : tight
savefig.pad_inches : 0.05


# Set x axis
xtick.direction : in
xtick.major.size : 3
xtick.major.width : 0.5
xtick.minor.size : 1.5
xtick.minor.width : 0.5
xtick.minor.visible : False
xtick.top : False

# Set y axis
ytick.direction : in
ytick.major.size : 3
ytick.major.width : 0.5
ytick.minor.size : 1.5
ytick.minor.width : 0.5
ytick.minor.visible : True
ytick.right : True

# Set line widths
axes.linewidth : 0.5
grid.linewidth : 0.5
lines.linewidth : 1.

# Remove legend frame
legend.frameon : False